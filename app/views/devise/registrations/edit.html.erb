<div class="row">
  <div class="span5">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal well', :method => :put }) do |f| %>
        <fieldset>  
            <legend>Edit Your Account</legend>
            <div class="control-group">
              <%= f.label :initials, :class => 'control-label' %>
            <div class="controls">
                <%= f.text_field :initials %>
              </div>
          </div>
            <div class="control-group">
              <%= f.label :email, :class => 'control-label' %>
            <div class="controls">
                <%= f.email_field :email %>
              </div>
          </div>
            <div class="control-group">
              <%= f.label :password, :class => 'control-label' %>
            <div class="controls">
                <%= f.password_field :password %>
              </div>
          </div>
            <div class="control-group">
              <%= f.label :password_confirmation, :class => 'control-label' %>
            <div class="controls">
                <%= f.password_field :password_confirmation %>
              </div>
          </div>
          <div class="form-actions"><%= f.submit "Update", :class => 'btn' %></div>
        </fieldset>
    <% end %>
  </div>
</div>

