<div class="row">
	<div class="span5">

		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal well' }) do |f| %>
			<fieldset>	
		  		<legend>Sign in</legend>
		  		<div class="control-group">
		  			<%= f.label :email, :class => 'control-label' %>
					<div class="controls">
			  			<%= f.email_field :email %>
			  		</div>
				</div>
		  		<div class="control-group">
		  			<%= f.label :password, :class => 'control-label' %>
					<div class="controls">
			  			<%= f.password_field :password %>
			  		</div>
				</div>
		  		<div class="control-group">
		  			<%= f.label :remember_me, :class => 'control-label' %>
					<div class="controls">
			  			<%= f.check_box :remember_me %>
			  		</div>
				</div>
				<div class="form-actions"><%= f.submit "Sign in", :class => 'btn' %></div>
			</fieldset>
		<% end %>
	</div>
</div>